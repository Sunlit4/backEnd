<h2>Lista de productos</h2>
{{#if arrayProduct}}
    <table class="table table-sm table-hover">
        <caption>Lista total de productos</caption>
        <thead>
            <tr>
                <th scope="col">#ID</th>
                <th scope="col">Nombre</th>
                <th scope="col">Precio</th>
            </tr>
        </thead>
        <tbody>
        {{#each arrayProduct}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.title}}</td>
                <td>{{this.price}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>
{{/if}}
  {{#unless arrayProduct}}
    <h3 class="alert alert-danger">{{err.message}}</h3>
  {{/unless}}

<footer>
  <a href="/"><button class="btn btn-success mt-3 mb-5">Ir a a√±adir producto</button></a>
</footer>